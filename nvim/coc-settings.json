{
  "python.linting.pylintArgs": [
    "--disable=C0111",
    "--load-plugins=pylint_django",
    "--errors-only"
  ],

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "coc.preferences.extensionUpdateCheck": "daily"
}
